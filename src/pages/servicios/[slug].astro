---
import { getServicios } from '../../lib/wordpress.js';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import TitleBreadcrumb from '../../components/TitleBreadcrumb.astro';

export async function getStaticPaths() {
  const servicios = await getServicios();
  
  if (!servicios || servicios.length === 0) {
    return [];
  }
  
  return servicios.map((servicio: any) => ({
    params: { slug: servicio.slug },
    props: { servicio },
  }));
}

const { servicio } = Astro.props as { servicio: any };

if (!servicio) {
  return Astro.redirect('/404');
}

const stripHtml = (html: string) => html.replace(/<[^>]*>/g, ' ').replace(/\s+/g, ' ').trim();
const rawDescription = servicio.excerpt?.rendered || servicio.content?.rendered || '';
const seoDescription = stripHtml(rawDescription).slice(0, 160);
---

<Layout
	title={`${servicio.title.rendered} | Elqui Capital`}
	description={seoDescription}
	canonicalPath={`/servicios/${servicio.slug}`}
>
  <Header />

  <main class="page">
    <TitleBreadcrumb
      title={servicio.title.rendered}
      backgroundImage="/images/inmobiliaria-elquicapital.jpg"
      breadcrumbs={[
        { label: 'Inicio', href: '/' },
        { label: 'Servicios', href: '/servicios' },
        { label: servicio.title.rendered },
      ]}
    />

    <article class="servicio-detail">
      <div class="container">
        {servicio._embedded?.['wp:featuredmedia']?.[0]?.source_url && (
          <img 
            src={servicio._embedded['wp:featuredmedia'][0].source_url} 
            alt={servicio.title.rendered}
            class="featured-image"
          />
        )}
        
        <div class="content" set:html={servicio.content.rendered} />
      </div>
    </article>
  </main>

  <Footer />
</Layout>

<style>
  .page {
    padding-top: 7rem;
  }

  .servicio-detail {
    padding: 2.5rem 2rem 4rem;
    min-height: 60vh;
  }
  
  .container {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }
  
  .back-link:hover {
    color: #764ba2;
  }
  
  .featured-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 2rem;
  }
  
  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #2d3748;
  }
  
  .content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #1a202c;
  }
  
  .content :global(p) {
    margin-bottom: 1rem;
  }
  
  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }
  
  .content :global(li) {
    margin-bottom: 0.5rem;
  }
</style>
