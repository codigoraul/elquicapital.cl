---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactInfo from '../components/ContactInfo.astro';
import TitleBreadcrumb from '../components/TitleBreadcrumb.astro';

const status = Astro.url.searchParams.get('status') || null;
---

<Layout
	title="Contacto | Elqui Capital"
	description="Contáctanos para agendar una consulta. Respaldo técnico en permisología, inspección técnica y mantención para proyectos inmobiliarios."
	canonicalPath="/contacto"
>
	<Header />

	<main class="page">
		<TitleBreadcrumb
			title="Contacto"
			backgroundImage="/images/bg-title.jpg"
			breadcrumbs={[
				{ label: 'Inicio', href: '/' },
				{ label: 'Contacto' },
			]}
		/>

		<section class="contact">
			<ContactInfo status={status} />
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.page {
		padding-top: 7rem;
	}

	@media (max-width: 768px) {
		.page {
			padding-top: 5rem;
		}
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.contact {
		padding: 0;
	}
</style>
