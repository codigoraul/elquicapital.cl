---
import { getContactInfo } from '../lib/wordpress.js';

const { status = null } = Astro.props;

const contactInfo = await getContactInfo();

const email = contactInfo?.acf?.email || 'contacto@elquicapital.cl';
const telefono = contactInfo?.acf?.telefono || '+569 33770553';
const direccion = contactInfo?.acf?.direccion || 'Santa Magdalena N° 75, Providencia';
const horario = contactInfo?.acf?.horario || 'Lunes a Viernes 9:00 - 18:00';

const rawBase = import.meta.env.BASE_URL ?? '/';
const basePath = rawBase === '/' ? '' : rawBase.replace(/\/$/, '');
const actionUrl = `${basePath}/contacto.php`;
---

<section class="contact-section" id="contacto">
  <div class="container">

    <div class="contact-wrapper">
      <!-- Columna Izquierda: Información de Contacto -->
      <div class="contact-info">
        <h3>Información de Contacto</h3>
        <p class="info-description">Contáctanos por cualquiera de estos medios. Te responderemos a la brevedad.</p>

        <div class="contact-items">
          <div class="contact-item">
            <div class="icon-wrapper">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <div class="item-content">
              <h4>Email</h4>
              <a href={`mailto:${email}`}>{email}</a>
            </div>
          </div>

          <div class="contact-item">
            <div class="icon-wrapper">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <div class="item-content">
              <h4>Teléfono</h4>
              <a href={`tel:${telefono.replace(/\s/g, '')}`}>{telefono}</a>
            </div>
          </div>

          <div class="contact-item">
            <div class="icon-wrapper">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div class="item-content">
              <h4>Ubicación</h4>
              <p>{direccion}</p>
            </div>
          </div>

          <div class="contact-item">
            <div class="icon-wrapper">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
            </div>
            <div class="item-content">
              <h4>Horario</h4>
              <p>{horario}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Columna Derecha: Formulario de Contacto -->
      <div class="form-column">
        <h3>Formulario de Contacto</h3>
        
        <div class="contact-form-wrapper">
          <div id="contact-status" class="status-message" style="display:none;"></div>
        
        <form class="contact-form" id="contactForm" action={actionUrl} method="POST">
          <input type="text" name="_gotcha" class="honeypot" tabindex="-1" autocomplete="off" />
          
          <div class="form-group">
            <label for="nombre">Nombre Completo *</label>
            <input type="text" id="nombre" name="nombre" required placeholder="Juan Pérez">
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="email-form">Email *</label>
              <input type="email" id="email-form" name="email" required placeholder="juan@ejemplo.com">
            </div>

            <div class="form-group">
              <label for="telefono-form">Teléfono</label>
              <input type="tel" id="telefono-form" name="telefono" placeholder="+56 9 1234 5678">
            </div>
          </div>

          <div class="form-group">
            <label for="asunto">Asunto</label>
            <input type="text" id="asunto" name="asunto" placeholder="¿En qué podemos ayudarte?">
          </div>

          <div class="form-group">
            <label for="mensaje">Mensaje *</label>
            <textarea id="mensaje" name="mensaje" rows="5" required placeholder="Cuéntanos sobre tu caso..."></textarea>
          </div>

          <button type="submit" class="submit-button" id="submitBtn">
            <span>Enviar Consulta</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="22" y1="2" x2="11" y2="13"/>
              <polygon points="22 2 15 22 11 13 2 9 22 2"/>
            </svg>
          </button>
        </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm');
    const submitBtn = document.getElementById('submitBtn');
    const statusEl = document.getElementById('contact-status');

    if (form) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Deshabilitar botón y mostrar loading
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span>Enviando...</span><div class="spinner"></div>';
        
        try {
          const formData = new FormData(form);
          const response = await fetch(form.action, {
            method: 'POST',
            body: formData
          });
          
          const result = await response.json();
          
          if (result.success) {
            // Mostrar mensaje de éxito
            statusEl.textContent = result.message;
            statusEl.className = 'status-message status-success';
            statusEl.style.display = '';
            
            // Limpiar formulario
            form.reset();
            
            // Scroll al mensaje
            statusEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            // Ocultar mensaje después de 5 segundos
            setTimeout(() => {
              statusEl.style.display = 'none';
            }, 5000);
            
          } else {
            // Mostrar mensaje de error
            statusEl.textContent = result.message;
            statusEl.className = 'status-message status-error';
            statusEl.style.display = '';
            
            // Scroll al mensaje
            statusEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
          
        } catch (error) {
          // Error de conexión
          statusEl.textContent = 'Error de conexión. Por favor intenta nuevamente.';
          statusEl.className = 'status-message status-error';
          statusEl.style.display = '';
        }
        
        // Restaurar botón
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<span>Enviar Consulta</span><svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg>';
      });
    }
  });
</script>

<style>
  .spinner {
    width: 16px;
    height: 16px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top: 2px solid white;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    display: inline-block;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .submit-button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }
</style>

<style>
  .honeypot {
    position: absolute;
    left: -9999px;
    width: 1px;
    height: 1px;
    opacity: 0;
    pointer-events: none;
  }

  .status-message {
    padding: 1rem 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    font-weight: 500;
    line-height: 1.5;
  }

  .status-success {
    background: rgba(34, 197, 94, 0.15);
    border: 1px solid rgba(34, 197, 94, 0.3);
    color: #86efac;
  }

  .status-error {
    background: rgba(239, 68, 68, 0.15);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: #fca5a5;
  }
  
  .contact-section {
    padding: 6rem 2rem;
    background: var(--eq-surface);
    color: var(--eq-text);
    position: relative;
    overflow: hidden;
  }
  
  .contact-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(var(--eq-sky-rgb), 0.5), transparent);
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .section-badge {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: rgba(var(--eq-sky-rgb), 0.2);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--eq-sky-rgb), 0.3);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    margin-bottom: 1rem;
    text-transform: uppercase;
    color: var(--eq-primary);
  }
  
  h2 {
    font-size: 32px;
    margin-bottom: 1rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    color: var(--eq-text);
  }
  
  .section-subtitle {
    font-size: 1.125rem;
    color: var(--eq-text-muted);
  }

  /* Layout de 2 columnas */
  .contact-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  /* Columna Izquierda - Info de Contacto */
  .contact-info h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .info-description {
    color: var(--eq-text-muted);
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .contact-items {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(221, 224, 232, 0.74);
    backdrop-filter: blur(10px);
    border: none;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .contact-item:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateX(5px);
  }

  .icon-wrapper {
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--eq-quaternary);
    border-radius: 10px;
    color: white;
  }

  .item-content h4 {
    font-size: 0.875rem;
    font-weight: 600;
    color: #666;
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .item-content a {
    color: #1a1a1a;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .item-content a:hover {
    color: var(--eq-accent);
  }

  .item-content p {
    margin: 0;
    color: #1a1a1a;
    font-size: 1rem;
  }

  /* Columna Derecha - Formulario */
  .form-column h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .contact-form-wrapper {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    border: none;
    border-radius: 16px;
    padding: 2.5rem;
    margin-top: 40px;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-size: 0.955rem;
    font-weight: 600;
    color: #191b20;
    letter-spacing: 0.3px;
  }

  .form-group input,
  .form-group textarea {
    padding: 0.875rem 1rem;
    background: rgba(185, 185, 185, 0.35);
    border: 1px solid rgba(255, 255, 255, 0.5);
    border-radius: 8px;
    color: #1a1a1a;
    font-size: 1rem;
    font-family: 'Inter', sans-serif;
    transition: all 0.3s ease;
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: rgba(0, 0, 0, 0.5);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.45);
    border-color: var(--eq-accent);
    box-shadow: 0 0 0 3px rgba(var(--eq-sky-rgb), 0.3);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: var(--eq-quaternary);
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    font-weight: 600;
    font-family: 'Inter', sans-serif;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .submit-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(var(--eq-blue-rgb), 0.4);
  }

  .submit-button:active {
    transform: translateY(0);
  }

  @media (max-width: 968px) {
    .contact-wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-form-wrapper {
      padding: 2rem;
    }
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 4rem 1.5rem;
    }

    .contact-item {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }
  }
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
  }
  
  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
  }
  
  @media (max-width: 768px) {
    .contact-info-section {
      padding: 4rem 1.5rem;
    }
    
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .cta-footer {
      padding: 2rem 1.5rem;
    }
  }
</style>
